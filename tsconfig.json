{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "downlevelIteration": true,
        "module": "ES2015",
        "moduleResolution": "node",
        "outDir": "./dist/",
        "resolveJsonModule": true,
        "target": "ES2019",
        "lib": [
            "DOM",
            "ES2019"
        ]
    },
    "include": [
        "*",
        "app/**/*",
        "src/**/*",
        "@technik-sde/foxy/**/*"
    ],
    "exclude": [
        "node_modules/**/*.test.ts",
        "**/webpack.*.js"
    ]
}
