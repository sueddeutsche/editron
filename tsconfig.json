{
    "compilerOptions": {
        "outDir": "./ts/",
        "module": "ES2015",
        "target": "ES2019",
        "allowJs": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "moduleResolution": "node",
        "lib": [
            "DOM",
            "ES2019"
        ]
    },
    "include": [
        "*",
        "editors/**/*",
        "plugin/**/*",
        "services/**/*",
        "utils/**/*",
        "src/**/*"
    ],
    "exclude": [
        "node_modules/**/*.test.ts",
        "node_modules/**/*.test.js",
        "**/webpack.*.js"
    ]
}
